    +ui-select('catalog-filter', 'Все', 'Комбайны', 'Посевная техника', 'Трактора', 'Почвообрабатывающая техника', 'Кормоуборочная техника', 'Внесение удобрений', 'Транспортировочные прицепы', 'Адаптеры', 'Коммунальная техника')
